+
+    binding.apply {
+      viewModel = profilePictureActivityViewModel
+      presenter = this@ProfilePictureActivityPresenter
+      lifecycleOwner = activity
+    }
+    profileId = ProfileId.newBuilder().setInternalId(internalProfileId).build()
+
